{
  "name": "backend-coding-test",
  "version": "1.0.0",
  "description": "A coding assessment for Xendit backend interviews",
  "main": "index.ts",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "tsc && node --unhandled-rejections=strict ./dist/index.js",
    "debug": "export DEBUG=* && npm run start",
    "test": "nyc _mocha --require ts-node/register --recursive src/**/*.spec.* tests/**/*.spec.*",
    "build": "npm run clean; npm run lint && npm run test",
    "lint": "eslint --fix src/ tests/ && tslint --fix src/**/*.ts tests/**/*.ts",
    "dev": "concurrently \"tsc -w\" \"nodemon ./dist/index.js\""
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node index.ts"
  },
  "pre-push": [
    "lint",
    "build",
    "test"
  ],
  "keywords": [
    "Xendit"
  ],
  "author": "Bo",
  "license": "ISC",
  "dependencies": {
    "@types/sqlite3": "^3.1.7",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dev": "^0.1.3",
    "express": "^4.17.1",
    "express-winston": "^4.1.0",
    "sqlite3": "^4.0.6",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.12",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.4",
    "@types/sinon": "^10.0.2",
    "@types/supertest": "^2.0.11",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "chai": "^4.3.4",
    "concurrently": "^6.2.0",
    "eslint": "^4.10.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^6.1.4",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "pre-push": "^0.1.1",
    "sinon": "^11.1.1",
    "source-map-support": "^0.5.19",
    "supertest": "^4.0.2",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.4"
  }
}
